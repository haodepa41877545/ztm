{
  "productName": "ZTMesh",
  "version": "0.1.0",
  "identifier": "com.ztm.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../../agent/gui"
  },
  "app": {
    "windows": [
      {
				"dragDropEnabled": false,
        "title": "ZTMesh App",
        "width": 455,
        "height": 350,
        "resizable": false,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../agent/main.js",
      "../../agent/src"
    ],
    "externalBin": ["bin/pipy"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
